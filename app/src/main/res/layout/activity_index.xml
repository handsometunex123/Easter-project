<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.deji.user.my_shop.Index"

    >



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/cloth1"
        android:id="@+id/Slide_photo"



        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bus_name"
        android:text="Exclusive Wears"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"

        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_below="@id/Slide_photo"
        android:textColor="@color/colorPrimary"

        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/bus_name"
    android:id="@+id/container"

    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"

    android:paddingLeft="10dp"
    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/location3"
        android:id="@+id/loc_icon"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flat 17, 46th avenue Shagari Village Akure, Ondo State"
        android:textSize="16sp"
        android:layout_toRightOf="@id/loc_icon"
        android:padding="6dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        android:id="@+id/address"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/phone_icon"
        android:layout_below="@+id/loc_icon"
        android:src="@drawable/phone2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2348100827040"
        android:layout_below="@+id/address"
        android:textSize="20sp"
        android:id="@+id/phone"
        android:layout_toRightOf="@+id/phone_icon"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/email"
        android:layout_below="@+id/phone_icon"
        android:src="@drawable/email"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Handsometunex123@yahoo.com"
        android:layout_below="@+id/phone"
        android:textSize="20sp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/email"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/time"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/email"
        android:src="@drawable/time"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24HRS OPERATION"

        android:layout_below="@+id/email"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/time"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        />




</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/container"
    android:layout_alignParentBottom="true"

    android:padding="10dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="25sp"

        android:id="@+id/desc"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc"
        android:textSize="20sp"
        android:paddingLeft="15dp"

        android:text="This shop sells all kind of wears both for females and males. We sell T-shirts, Shoes, sandals etc        "
        android:textColor="@android:color/black"
        />



</RelativeLayout>








</RelativeLayout>
